<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<?import javafx.geometry.Insets?>
<fx:root
    type="javafx.scene.layout.HBox"
    alignment="TOP_RIGHT"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    maxHeight="Infinity"
    maxWidth="Infinity"
>
    <Label
        fx:id="message"
        minHeight="-Infinity"
        wrapText="true"
    />
    <ImageView
        fx:id="displayPicture"
        preserveRatio="true"
        fitHeight="100"
        pickOnBounds="true"
    />
    <padding>
        <Insets top="14" left="14" bottom="14" right="14" />
    </padding>
</fx:root>
